{
  "type": "module",
  "scripts": {
    "lint-oxlint": "npx -y oxlint --fix",
    "lint-html": "npx -y js-beautify@1 '**/*.html' --type html --replace --indent-size 2 --max-preserve-newlines 1 --end-with-newline",
    "lint-js-md": "npx -y prettier@3.5 --print-width 120 --write '**/*.js' '!**/*.min.js' '**/*.md'",
    "lint": "npm run lint-html && npm run lint-js-md && npm run lint-oxlint",
    "screenshot": "node screenshot.mjs",
    "pretest": "bash test-setup.sh",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "happy-dom": "^17.6.3",
    "playwright": "^1.57.0",
    "sharp": "^0.34.3",
    "vitest": "^3.2.1"
  }
}
